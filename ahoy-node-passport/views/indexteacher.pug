    .container .button-teaching {
    position: relative;
    right: -29%;
    bottom: -600px;
    border: none;
    border-radius: 12px;
    width: 14.5%;
    height: 55px;
    margin: auto;
    margin-bottom: 100px;
    padding: 15px 25px;
    text-align: center;
    font-size: 26.5px;
    cursor: pointer;
    outline: none;
    font-family: 'Arial';
    text-transform: uppercase;
    color: #7944ac;
    box-shadow: 0 9px #999;
    background-color: #f8cc6d;
    }
    .button-teaching:hover {
    box-shadow: #d7bde2;
    }
    .button-teaching:active {
    background-color: #f7bd42;
    box-shadow: 0 5px rgb(124, 123, 123);
    transform: translateY(4px);
    }
