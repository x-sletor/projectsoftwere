  style(media='screen').
    html {
    background: url(https://i.pinimg.com/originals/27/7f/d2/277fd2eb420e4bf3d8facc2659a6b413.png) no-repeat center fixed;
    background-size: 1540px 760px;
    }
    .container {
    position: relative;
    width: 100%;
